<div class="container">
    <!-- this needs to be worked over -->
    <div class="jumbotron">
        <h1>Eat Da Burger</h1>
        <p id="tagline">Make Burgers, Eat Burgers.</p>
        <br>
        <img src="/assets/img/burger.png" alt="Burger Image">
        <span class="new-burger-span">
            <panel class="make-burger-panel">
                <h2>Make a Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="newBurger" id="color-override">New Burger:</label>
                        <input type="text" id="newBurger" name="burger">
                        {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                        <button type="submit" class="btn btn-success" id="addburger"><span
                                class="fa fa-thumbs-up"></span>Create Burger</button>
                    </div>
                </form>
            </panel>
        </span>
    </div><!-- /jumbotron -->

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>Burgers - ready to eat!</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span> {{this.id}} - {{this.burger_name}}<br></span>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->